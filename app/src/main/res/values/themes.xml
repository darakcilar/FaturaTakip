<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="materialButtonStyle">@style/Widget.MyApp.Button</item>
        <item name="floatingActionButtonStyle">@style/Widget.MyApp.FAB</item>
    </style>

    <!-- Düz Dolgu Buton -->
    <style name="Widget.MyApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="android:insetLeft">16dp</item>
        <item name="android:insetRight">16dp</item>
    </style>

    <!-- Özel FAB -->
    <style name="Widget.MyApp.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="cornerSize">16dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="rippleColor">?attr/colorOnPrimary</item>
    </style>
</resources>
